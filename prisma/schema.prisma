
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model Student {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  fullName  String
  enrollmentNo String @unique
  createdAt DateTime @default(now())
  dateOfBirth DateTime
  mobileNo String
  whatsappNo String?
  gender String
  localAddress String
  permanentAddress String
  aadharNo String
  photo String
  fatherName String
  motherName String
  parentMobileNo String
  passOutYear Int
  course String

}

model Teacher {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  fullName  String
  createdAt DateTime @default(now())
  dateOfBirth DateTime
  mobileNo String
  whatsappNo String?
  gender String
  localAddress String
  permanentAddress String
  aadharNo String
  photo String
  fatherName String
  motherName String
  highestQualification String
  experience String

}

model Admin {
  id        Int      @id @default(autoincrement())
  username String    @unique
  password String
}

model Notice {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
}

model NewsEvent {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  imageUrl String
  createdAt DateTime @default(now())
}


        